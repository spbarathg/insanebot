# =============================================================================
# üõ°Ô∏è PRODUCTION SECURITY CONFIGURATION
# =============================================================================

# Wallet security
WALLET_ENCRYPTION=true
WALLET_PASSWORD=${WALLET_ENCRYPTION_PASSWORD}
MASTER_ENCRYPTION_KEY=${MASTER_ENCRYPTION_KEY}
SECURITY_AUDIT_MODE=true

# API security
API_RATE_LIMITING=true
API_TIMEOUT_SECONDS=3
MAX_API_RETRIES=2
API_AUTH_TOKEN=${API_AUTH_TOKEN}
MONITORING_AUTH_TOKEN=${MONITORING_AUTH_TOKEN}

# =============================================================================
# üîê PRODUCTION SECRETS MANAGEMENT
# =============================================================================

# Database (Production)
DATABASE_URL=${DATABASE_URL:-postgresql://trading_user:${DB_PASSWORD}@postgres:5432/trading_bot_prod}
REDIS_URL=${REDIS_URL:-redis://redis:6379/0}

# External APIs
JUPITER_API_KEY=${JUPITER_API_KEY}
GROK_API_KEY=${GROK_API_KEY}
TWITTER_BEARER_TOKEN=${TWITTER_BEARER_TOKEN}
TELEGRAM_API_ID=${TELEGRAM_API_ID}
TELEGRAM_API_HASH=${TELEGRAM_API_HASH}

# =============================================================================
# üìä PRODUCTION MONITORING & ALERTING
# =============================================================================

# Discord notifications
DISCORD_WEBHOOK_URL=${DISCORD_WEBHOOK_URL}
DISCORD_NOTIFICATIONS=true

# Email alerts (Production)
EMAIL_NOTIFICATIONS=true
SMTP_HOST=${SMTP_HOST:-smtp.gmail.com}
SMTP_PORT=587
SMTP_USERNAME=${SMTP_USERNAME}
SMTP_PASSWORD=${SMTP_PASSWORD}
ALERT_EMAIL=${ALERT_EMAIL}

# Monitoring
GRAFANA_ADMIN_PASSWORD=${GRAFANA_ADMIN_PASSWORD}
PROMETHEUS_AUTH_TOKEN=${PROMETHEUS_AUTH_TOKEN}

# =============================================================================
# üö® PRODUCTION SAFETY & COMPLIANCE
# =============================================================================

# Emergency controls
EMERGENCY_STOP_ENABLED=true
PANIC_SELL_ENABLED=true
MANUAL_OVERRIDE=true
TRADING_CIRCUIT_BREAKERS=true
MAX_DRAWDOWN_HALT=0.15
RAPID_LOSS_PROTECTION=true
RAPID_LOSS_THRESHOLD=0.08
RAPID_LOSS_TIMEFRAME_MINUTES=10

# Compliance
AUDIT_LOGGING=true
TRADE_LOGGING=true
DECISION_LOGGING=true
ERROR_TRACKING=true
COMPLIANCE_MODE=true

# =============================================================================
# üåê PRODUCTION INFRASTRUCTURE
# =============================================================================

# Container settings
CONTAINER_MODE=true
API_HOST=0.0.0.0
API_PORT=8080
WORKER_PROCESSES=1

# Performance
MEMORY_LIMIT_MB=4096
CPU_LIMIT_PERCENT=70
CONNECTION_TIMEOUT=8
MAX_CONCURRENT_CONNECTIONS=25

# Logging
LOG_LEVEL=INFO
STRUCTURED_LOGGING=true
LOG_TO_FILE=true
LOG_ROTATION=true
LOG_RETENTION_DAYS=30

# =============================================================================
# üîß PRODUCTION FEATURE FLAGS
# =============================================================================

# Core features
TITAN_SHIELD_ENABLED=true
ANT_COLONY_ENABLED=true
MEV_PROTECTION=true
