BETA_FEATURES=false
RESEARCH_MODE=false
DEBUG_MODE=false
PROFILING_ENABLED=false

# =============================================================================
# üìã PRODUCTION VALIDATION
# =============================================================================

# Environment
ENVIRONMENT=production
DEPLOYMENT_TIMESTAMP=${DEPLOYMENT_TIMESTAMP}
VERSION=${APP_VERSION:-2.0.0}
