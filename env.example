# ============================================================================
# OPERATION MODE
# ============================================================================
# Set to 'false' for production trading with real funds
# Set to 'true' for simulation mode (safe testing)
SIMULATION_MODE=true

# ============================================================================
# SOLANA WALLET CONFIGURATION
# ============================================================================
# Your Solana wallet private key (REQUIRED for production)
# Supported formats:
# - Hex: 64 character hex string (with or without 0x prefix)
# - Base58: 88 character base58 encoded key
# - Array: JSON array of 64 bytes [1,2,3,...]
# SECURITY: Keep this absolutely secret! Never commit to version control.
SOLANA_PRIVATE_KEY=demo_key_for_testing

# Wallet security settings (REQUIRED for production)
# Master password for encrypting sensitive data
WALLET_PASSWORD=your_secure_master_password_here

# Salt for encryption (generate a random 32-byte hex string)
WALLET_SALT=your_random_salt_here_32_bytes_hex

# Solana RPC endpoint (optional, defaults to public endpoint)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# ============================================================================
# API CREDENTIALS
# ============================================================================
# Helius API key for Solana blockchain data
# Get yours at: https://helius.xyz/
HELIUS_API_KEY=abc123example_replace_with_real_api_key

# Jupiter API key (optional but recommended for better rate limits)
# Get yours at: https://docs.jup.ag/
JUPITER_API_KEY=demo_key_for_testing

# ============================================================================
# TRADING CONFIGURATION
# ============================================================================
# Starting capital for simulation mode (in SOL)
SIMULATION_CAPITAL=0.1

# Maximum trades per day (safety limit)
MAX_TRADES_PER_DAY=20

# Maximum position size per trade (in SOL)
MAX_POSITION_SIZE=1.0

# Minimum time between trades on same token (seconds)
MIN_TRADE_INTERVAL=300

# Maximum concurrent trades
MAX_CONCURRENT_TRADES=3

# Default slippage tolerance (percentage)
DEFAULT_SLIPPAGE=1.5

# Maximum allowed slippage (percentage)
MAX_SLIPPAGE=5.0

# ============================================================================
# RISK MANAGEMENT
# ============================================================================
# Enable/disable trading for unknown tokens
ALLOW_UNKNOWN_TOKENS=true

# Minimum market cap for trading (USD)
MIN_MARKET_CAP=50000

# Maximum market cap for meme coin trading (USD)
MAX_MARKET_CAP=10000000

# Minimum liquidity for trading (USD)
MIN_LIQUIDITY=10000

# Enable/disable high-risk token trading
ALLOW_HIGH_RISK_TOKENS=false

# ============================================================================
# MONITORING AND LOGGING
# ============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Enable detailed trade logging
DETAILED_TRADE_LOGS=true

# Webhook URL for trade notifications (optional)
NOTIFICATION_WEBHOOK_URL=

# Discord webhook for alerts (optional)
DISCORD_WEBHOOK_URL=

# ============================================================================
# ADVANCED CONFIGURATION
# ============================================================================
# Local LLM model for trading decisions
LLM_MODEL=phi-3

# Enable/disable ML predictions
ENABLE_ML_PREDICTIONS=true

# Enable/disable pattern recognition
ENABLE_PATTERN_RECOGNITION=true

# Enable/disable sentiment analysis
ENABLE_SENTIMENT_ANALYSIS=true

# Enable/disable arbitrage scanning
ENABLE_ARBITRAGE_SCANNING=true

# Performance optimization
ASYNC_WORKERS=4
REQUEST_BATCH_SIZE=10
CACHE_TTL=300

# ============================================================================
# DATABASE CONFIGURATION (Optional)
# ============================================================================
# Database URL for persistent storage
# DATABASE_URL=postgresql://username:password@localhost:5432/trading_bot

# Redis URL for caching (optional)
# REDIS_URL=redis://localhost:6379/0

# ============================================================================
# SECURITY NOTES
# ============================================================================
# 1. NEVER commit your .env file to version control
# 2. Use strong, unique passwords for WALLET_PASSWORD
