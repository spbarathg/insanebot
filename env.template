# Enhanced Ant Bot - Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED API KEYS
# =============================================================================

# QuickNode - Primary Solana RPC (REQUIRED)
QUICKNODE_ENDPOINT_URL=https://your-quicknode-endpoint.solana-mainnet.quiknode.pro/your-token/

# Helius - Backup Solana RPC (REQUIRED)
HELIUS_API_KEY=your-helius-api-key-here

# Jupiter - DEX aggregator (REQUIRED)
JUPITER_API_KEY=your-jupiter-api-key-here

# =============================================================================
# WALLET CONFIGURATION (REQUIRED FOR TRADING)
# =============================================================================

# Your wallet private key (base58 encoded)
PRIVATE_KEY=your-wallet-private-key-here

# Your wallet address (optional, can be derived from private key)
WALLET_ADDRESS=your-wallet-address-here

# Legacy wallet key (optional, for compatibility)
WALLET_PRIVATE_KEY=your-wallet-private-key-here

# Wallet encryption credentials (REQUIRED for secure wallet management)
WALLET_PASSWORD=your_secure_password_here
WALLET_SALT=your_32_byte_hex_salt_here

# =============================================================================
# OPTIONAL API KEYS
# =============================================================================

# Grok AI - For advanced sentiment analysis (optional)
GROK_API_KEY=your-grok-api-key-here

# X (Twitter) API - For social sentiment (optional)
X_API_KEY=your-x-api-key-here

# =============================================================================
# MONITORING CONFIGURATION (OPTIONAL)
# =============================================================================

# Grafana admin credentials
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=secure-password-here

# =============================================================================
# TRADING CONFIGURATION (OPTIONAL)
# =============================================================================

# Initial capital amount in SOL
INITIAL_CAPITAL=0.1

# Enable/disable simulation mode
SIMULATION_MODE=false

# Network to trade on
NETWORK=mainnet-beta

# =============================================================================
# SYSTEM CONFIGURATION (OPTIONAL)
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable monitoring
ENABLE_MONITORING=true 