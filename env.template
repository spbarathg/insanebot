# ===========================================
# SOLANA TRADING BOT ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control!

# ===========================================
# üîë API KEYS (REQUIRED FOR REAL DATA)
# ===========================================

# QuickNode API Configuration - RECOMMENDED FOR BEST PERFORMANCE
# Get from https://quicknode.com - Choose Solana Mainnet endpoint
# This provides direct blockchain access with 99.9% reliability
QUICKNODE_ENDPOINT_URL=https://your-endpoint.solana-mainnet.quiknode.pro/your-token/
QUICKNODE_API_KEY=your-quicknode-api-key-if-needed

# Helius API Key - Get from https://helius.xyz/
# Used for: Token metadata, price data, transaction history, wallet analysis
# NOTE: Currently experiencing issues (403 errors) - QuickNode recommended as replacement
HELIUS_API_KEY=your_real_helius_api_key_here

# Jupiter API Key - Get from https://jup.ag/ (may not be required for basic usage)
# Used for: DEX aggregation, swap quotes, token routing
JUPITER_API_KEY=your_real_jupiter_api_key_here

# ===========================================
# üîê WALLET CONFIGURATION (OPTIONAL - SIMULATION MODE SAFE)
# ===========================================

# Your Solana wallet private key (Base58 encoded)
# ‚ö†Ô∏è ONLY set this if you want to enable REAL trading
# ‚ö†Ô∏è KEEP THIS SECRET - Never share or commit to git!
SOLANA_PRIVATE_KEY=your_wallet_private_key_base58_encoded

# Alternative wallet key format (same as above, different name for compatibility)
WALLET_PRIVATE_KEY=your_wallet_private_key_base58_encoded
PRIVATE_KEY=your_wallet_private_key_base58_encoded

# ===========================================
# ü§ñ BOT CONFIGURATION
# ===========================================

# Trading mode - ALWAYS start with True for safety!
# True = Simulation mode (no real trades, safe for testing)
# False = Live trading mode (real money at risk!)
SIMULATION_MODE=True

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable/disable real trade execution (extra safety)
EXECUTION_ENABLED=false

# ===========================================
# üí∞ TRADING PARAMETERS
# ===========================================

# Maximum amount to trade per transaction (in SOL)
MAX_TRADE_AMOUNT=0.1

# Minimum profit threshold (0.005 = 0.5%)
MIN_PROFIT_THRESHOLD=0.005

# Maximum allowed slippage (0.03 = 3%)
MAX_SLIPPAGE=0.03

# Maximum price impact allowed (0.02 = 2%)
MAX_PRICE_IMPACT=0.02

# ===========================================
# üåê RPC & API ENDPOINTS
# ===========================================

# Solana RPC endpoint - QuickNode recommended for reliability
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Jupiter API URL
JUPITER_API_URL=https://quote-api.jup.ag/v6

# Helius API URL
HELIUS_API_URL=https://api.helius.xyz/v0

# ===========================================
# üìä MONITORING & DASHBOARDS
# ===========================================

# Grafana admin credentials
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password_here

# Prometheus configuration
PROMETHEUS_RETENTION=15d

# ===========================================
# üóÑÔ∏è DATABASE (OPTIONAL)
# ===========================================

# Database connection string (if using persistent storage)
# DATABASE_URL=postgresql://user:password@localhost:5432/trading_bot

# ===========================================
# ‚öôÔ∏è ADVANCED SETTINGS (OPTIONAL)
# ===========================================

# Python configuration
PYTHONUNBUFFERED=1
PYTHONPATH=/app

# API rate limiting
API_RATE_LIMIT=100
API_TIMEOUT=30

# ML model settings
ML_MODEL_PATH=/app/models
ENABLE_ML_PREDICTIONS=true

# Risk management
ENABLE_STOP_LOSS=true
STOP_LOSS_PERCENTAGE=0.05

# Arbitrage scanner settings
ARBITRAGE_SCAN_INTERVAL=15
MIN_ARBITRAGE_PROFIT=0.01

# ===========================================
# üîí SECURITY SETTINGS
# ===========================================

# Enable MEV protection
MEV_PROTECTION=true

# Enable transaction simulation before execution
SIMULATE_BEFORE_EXECUTE=true

# Maximum gas price (in lamports)
MAX_GAS_PRICE=5000

# ===========================================
# üìà PERFORMANCE TUNING
# ===========================================

# Number of worker threads
WORKER_THREADS=4

# Cache settings
CACHE_TTL=30
ENABLE_CACHING=true

# Memory limits
MAX_MEMORY_USAGE=2G

